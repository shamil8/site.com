{% extends 'base.html.twig' %}

{% block title %}Site.com page{% endblock %}

{% block body %}

    {% if results %}
    <table>
        <thead>
            <th>Category --------</th>
            <th>Product</th>
        </thead>
        <tbody>
        {% for result  in  results %}
        <tr>
            <td><a href="/{{ result[0] }}">{{ result[0] }}</a></td>
            <td>{{ result[1] }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
    <p>No category display!!!</p>
    {% endif %}
{% endblock %}
